      "$ref": "https://schemas.letsflow.io/v1.0/schema"
    }
  },
  "required": [
    "states"
  ],
  "anyOf": [
    {
      "not": {
        "required": ["name"]
      }
    },
    {
      "required": ["name", "version"]
    }
  ],
  "$defs": {
    "state": {
      "oneOf": [
        {
          "$ref": "#/$defs/explicitState"
        },
        {
          "$ref": "#/$defs/simpleState"
        },
        {
          "$ref": "#/$defs/timeoutState"
        }
      ]
    },
    "partialState": {
      "oneOf": [
        {
          "allOf": [
            {
              "$ref": "#/$defs/explicitState"
            },
            {
              "type": "object",
              "required": []
            }
          ]
        },
        {
          "$ref": "#/$defs/simpleState"
        },
        {
          "$ref": "#/$defs/timeoutState"
        }
      ]
    },
    "explicitState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/$defs/stringFn"
        },
        "instructions": {
          "$ref": "#/$defs/instructions"
        },
        "notify": {
          "$ref": "#/$defs/notify"
        },
        "transitions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/transition"
          }
        }
      },
      "required": [
        "transitions"
      ]
    },
    "simpleState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/$defs/stringFn"
        },
        "instructions": {
          "$ref": "#/$defs/instructions"
        },
        "notify": {
          "$ref": "#/$defs/notify"
        },
        "on": {
          "type": "string"
        },
        "by": {
          "$ref": "#/$defs/multiString"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        }
      },
      "required": [
        "on",
        "goto"
      ]
    },
    "timeoutState": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "#/$defs/stringFn"
        },
        "instructions": {
          "$ref": "#/$defs/instructions"
        },
        "notify": {
          "$ref": "#/$defs/notify"
        },
        "after": {
          "$ref": "#/$defs/timePeriod"
        },
        "if": {
          "type": "null"
        },
        "goto": {
          "type": "string"
        }
      },
      "required": [
        "after",
        "goto"
      ]
    },
    "endState": {
      "type": "object",
      "properties": {
        "title": {
