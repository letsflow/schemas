          "$ref": "#/$defs/booleanFn"
        },
        "after": {
          "$ref": "#/$defs/timePeriod"
        },
        "trigger": {
          "$ref": "#/$defs/stringFn"
        },
        "message": {
          "oneOf": [
            {
              "type": "string"
