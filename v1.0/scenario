        }
      ]
    },
    "booleanFn": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "$ref": "https://schemas.letsflow.io/v1.0/fn"
        }
      ]
    },
    "multiString": {
      "oneOf": [
        {
          "type": "string"
