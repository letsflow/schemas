        "instructions": {
          "$ref": "#/$defs/instructions"
        },
        "notify": {
          "$ref": "#/$defs/notify"
        }
      },
      "nullable": true
    },
    "transition": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "on": {
              "type": "string"
            },
            "by": {
              "$ref": "#/$defs/multiString"
            },
            "if": {
              "$ref": "#/$defs/booleanFn"
            },
            "goto": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            }
          },
          "required": [
            "on",
            "goto"
          ]
        },
        {
          "type": "object",
          "properties": {
            "after": {
              "$ref": "#/$defs/timePeriod"
            },
            "if": {
              "$ref": "#/$defs/booleanFn"
